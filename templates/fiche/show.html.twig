{% extends 'dashboard.html.twig' %}

{% block title %}Fiche
{% endblock %}

{% block body %}
	<h1>Fiche</h1>

	<table class="table">
		<tbody>
		<tr>
			<th>Id</th>
			<td>{{ fiche.id }}</td>
		</tr>
		<tr>
			<th>Nom_Commerciale</th>
			<td>{{ fiche.nom_commerciale}}</td>
		</tr>
		<tr>
			<th>Dosage</th>
			<td>{{ fiche.dosage }}</td>
		</tr>
		<tr>
			<th>Utilisation</th>
			<td>{{ fiche.utilisation}}</td>
		</tr>


		<tr>
			<th>Nom médicament</th>
			<td>{{ fiche.idMed.nom }}</td>
		</tr>

		</tbody>
	</table>

	<a href="{{ path('fiche_index') }}" class="btn btn-info btn-round">Retourner à la liste</a><br>


	<a href="{{ path('fiche_edit', {'id': fiche.id}) }}" class="btn btn-round">Modifier</a>

	{{ include('fiche/_delete_form.html.twig') }}
{% endblock %}

{% extends 'dashboard.html.twig' %}

% block title %}Fiche
{% endblock %}

{% block body %}

<section id="hero" class="hero d-flex align-items-center">
    <div class="container">
        <div class="col-lg-6 d-flex flex-column justify-content-center">
        <h1>Fiche</h1>
        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ fiche.id }}</td>
            </tr>
            <tr>
                <th>Nom_Commerciale</th>
                <td>{{fiche.nom_commerciale}}</td>
            </tr>
            <tr>
                <th>Dosage</th>
                <td>{{fiche.dosage}}</td>
            </tr>
            <tr>
                <th>Utilisation</th>
                <td>{{fiche.utilisation}}</td>
            </tr>
            <tr>
                <th>Nom médicament</th>
                <td>{{ fiche.idMed.nom }}</td>
            </tr>

            </tbody>
        </table>
        <a href="{{ path('medicament_index') }}" class="btn btn-primary btn-round">Retourner à la liste</a><br><br>
        <a href="{{ path('form_mail', {'id': fiche.id})  }}" class="btn btn-primary btn-round">Envoyer par mail</a><br>
        </div>
    </div>
</section>


{% endblock %}
